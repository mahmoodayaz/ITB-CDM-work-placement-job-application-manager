{% include 'default/header.html.twig' %}

{# CONTENT-WRAPPER SECTION START #}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-head-line">Applied Applicants</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-body">
          

          {% for count,data in jobs %}  
          <h3> Title: {{ data['title'] }} </h3>
          <h3> Deadline: {{ data['deadline'] }} </h3>
          <h3> Description: {{ data['description'] }} </h3>


            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th style="width:150px;">Image</th>
                    <th style="width:100px;">CV</th>
                  </tr>
                </thead>
                <tbody>
                  {% for count2,data2 in data['applicants'] %} 
                    <tr>
                      <td> {{ count2+1 }} </td>
                      <td> {{ data2['name'] }} </td>
                      <td> {{ data2['email'] }} </td>
                      <td> {{ data2['phone'] }} </td>
                      <td> {{ data2['address'] }} </td>
                      <td> <img width="150px" src="{{ app.request.getSchemeAndHttpHost() }}/assets/img/{{ data2['img'] }}"> </td>
                      <td> <a href="{{ app.request.getSchemeAndHttpHost() }}/employer/applicants/{{ data2['student_id'] }}">Download CV</a> </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        {% endfor %}


      </div>
    </div>
  </div>
</div>
{# CONTENT-WRAPPER SECTION END #}
{% include 'default/footer.html.twig' %}

<script type="text/javascript">

  $(document).ready(function(){ 
    $(".jobs").click(function(e){
      e.preventDefault();
      var id = $(this).attr("job");
      // alert(id);
      var url = "{{ app.request.getSchemeAndHttpHost() }}/lecturer/job/"+id;
      alert(url);
      $.ajax({
        url: url,
        type: "POST",
        dataType: "json",
        success: function(data){
          console.log(data);
        },
        error: function(error){
         console.log("Error:");
         console.log(error);
       }
     });

    });
  });
</script>
