{% include 'default/header.html.twig' %}

    {# CONTENT-WRAPPER SECTION START #}
        <div class="container" >
            <div class="row">
                <div class="col-md-12">
                    <h4 class="page-head-line">Please Read description Before Applying for any job</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                   <table class="table table-striped projects">
                      <thead>
                        <tr>
                          <th style="width: 1%">#</th>
                          <th style="width: 20%">Job Title</th>
                          <th>Job Description</th>
                          <th style="width: 20%">Deadline</th>
                          <th style="width: 20%">#Apply</th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for key,value in jobs %}
                          <tr>
                            <td>{{ key+1 }} </td>
                              <td>{{ value['title'] }}</td>
                             <td>{{ value['description'] }}</td>
                             <td>{{ value['deadline'] | date('F j, Y g:i a') }}</td>
                              
                              <td>
                                <a href="{{ app.request.getSchemeAndHttpHost() }}/student/apply/{{ value['id'] }}" class="btn btn-primary"><i class="fa fa-folder"></i> Apply </a> 
                              </td>

                          </tr>
                        {% endfor %}
                      </tbody>
                    </table>
                   </div>
           </div>
       </div>
   {# CONTENT-WRAPPER SECTION END #}
 
